@model LoginViewModel;

<div class="container">
	<h1>Login</h1>
	<form method="post" asp-controller="Account" asp-action="Login">
		<div class="formGroup">
			<label for="email" asp-for="Email" class="form-label"></label>
			<input id="email" asp-for="Email" class="form-control" />
			<span class="text-danger" asp-validation-for="Email"></span>
		</div>

		<div class="formGroup">
			<label for="password" asp-for="Password" class="form-label"></label>
			<input id="password" asp-for="Password" class="form-control" type="password" />
			<span class="text-danger" asp-validation-for="Password"></span>
		</div>

		<div class="m-2 text-end">
			<button class="btn btn-sm btn-success" type="submit">Login</button>
			<button class="btn btn-sm btn-warning" type="reset">Reset</button>
		</div>
	</form>
</div>
